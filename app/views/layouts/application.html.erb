<!DOCTYPE html>
<html>
    <head>
        <title>Railsgirls</title>
        <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
        <%= stylesheet_link_tag 'projects' %>
        <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
        <%= csrf_meta_tags %>
    </head>
    <body>
        <nav class="navbar navbar-inverse navbar-fixed-top">
            <div class="container">
                <div class="navbar-header">
                    <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#collapsemenu" aria-expanded="false">
                        <span class="sr-only">Toggle navigation</span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                    </button>
                    <div class="container-fluid">
                        <ul class="nav navbar-nav">
                            <li class="<%= 'active' if current_page?(root_path) %>"><%= link_to "Welcome", root_path, class: "navbar-brand" %></li>
                        </ul>
                    </div>
                </div>
                <p class="navbar-text navbar-right hidden-xs">Joshua Campbell</p>
                <div class="collapse navbar-collapse" id="collapsemenu">
                    <ul class="nav navbar-nav">
                        <li class="<%= 'active' if current_page?(portfolio_path) %>"><%= link_to "Portfolio", portfolio_path %></li>
                        <li class="<%= 'active' if current_page?(about_path) %>"><%= link_to "About", about_path %></li>
                        <li class="<%= 'active' if current_page?(contact_path) %>"><%= link_to "Contact", contact_path %></li>
                    </ul>
                </div>
            </div>
        </nav>

        <div class="content tab-content">
            <%= yield %>
        </div>

        <div class="footer">
            <div class="container">
                <ul class="social_media">
                    <li><%= link_to "github", "https://github.com/jcampbe6", class: "github" %></li>
                    <li><%= link_to "linkedin", "http://www.linkedin.com/in/joshcamp", class: "linkedin" %></li>
                </ul>
                <p>&copy; 2015 Joshua Campbell</p>
            </div>
        </div>
    </body>
</html>
